<Page x:Class="Pong_csharp.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pong_csharp"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280" Background="Gray"
      ShowsNavigationUI="False"
      Title="Menu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Pong" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" FontSize="80" FontFamily="Times New Roman" FontWeight="Bold"/>
        <Button Content="Start Game" Grid.Column="1" Grid.Row="2" Click="Start_Game" Margin="10"/>
        <Button Content="Settings" Grid.Column="1" Grid.Row="3" Click="Settings" Margin="10" x:Name="_NavigationFrame"/>
        <Button Content="Quit" Grid.Column="1" Grid.Row="4" Click="Quit" Margin="10"/>

    </Grid>
</Page>
