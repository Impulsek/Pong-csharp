<Window x:Class="Pong_csharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_csharp"
        mc:Ignorable="d"
        Title="Pong" Height="720" Width="1280"
        Background="Gray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Pong" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" FontSize="80" FontFamily="Times New Roman" FontWeight="Bold"/>
        <Button Content="Start Game" Grid.Column="1" Grid.Row="2" Click="Start_Game" Margin="10"/>
        <Button Content="Settings" Grid.Column="1" Grid.Row="3" Click="Settings" Margin="10"/>
        <Button Content="Quit" Grid.Column="1" Grid.Row="4" Click="Quit" Margin="10"/>

    </Grid>
</Window>
